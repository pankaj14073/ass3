<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pankaj.ass3.act1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Data  :"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/data"
        android:width="200dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:allowUndo="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Save(Internal Storage)"
        android:id="@+id/savei"
        android:onClick="saveDatai"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/data"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Save(External Storage)"
        android:id="@+id/savee"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="saveDatae"
        android:layout_alignTop="@+id/savei"
        android:layout_alignRight="@+id/data"
        android:layout_alignEnd="@+id/data" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="top|fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#00FF00"
        android:typeface="monospace"
        android:id="@+id/dataTextView"
        style="@style/Base.V12.Widget.AppCompat.AutoCompleteTextView"
        android:background="@color/foreground_material_light"
        android:textIsSelectable="true"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
